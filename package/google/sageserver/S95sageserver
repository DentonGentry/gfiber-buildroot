#!/bin/sh

RETVAL=0

start() {
  cd /app/sage
  ./runsage &
  return $RETVAL
}

stop() {
  /bin/kill `/bin/pidof cvm`
  /bin/kill `/bin/pidof sagesrv`
  return $RETVAL
}

restart() {
  stop
  start
}

case "$1" in
  start)
    start
  ;;
  stop)
    stop
  ;;
  restart)
    restart
  ;;
  *)
  echo "Usage: $0 {start|stop|restart}"
  exit 1
esac

exit $?
