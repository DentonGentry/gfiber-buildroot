	select BR2_PACKAGE_IFPLUGD
	select BR2_PACKAGE_PROTOBUF
	select BR2_PACKAGE_INADYN
	select BR2_PACKAGE_LIBGLIB2
	select BR2_PACKAGE_GOOGLE_GCM

