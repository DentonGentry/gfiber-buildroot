#!/bin/sh

start() {
  echo "Starting miniclient."
  (
    wait-until-created /tmp/ntp.synced
    /app/client/runminiclient 2>&1 | logger -t miniclient &
  ) &
}

stop() {
  pkill runminiclient
  pkill miniclient
  pkill waitpower
}

restart() {
  stop
  start
}

case "$1" in
  start)
    start
  ;;
  stop)
    stop
  ;;
  restart)
    restart
  ;;
  *)
  echo "Usage: $0 {start|stop|restart}"
  exit 1
esac

exit $?
