config BR2_PACKAGE_BRUNO
	bool "Enable Bruno Board"
	default y
	select BR2_PACKAGE_GOOGLE_PLATFORM_BASE
	select BR2_PACKAGE_GOOGLE_PLATFORM_PERIPHERAL
	help
	  Customization for Bruno boards.

config BR2_PACKAGE_BRUNO_TEST
	bool "Include Test Packages"
	default n
	select BR2_PACKAGE_BONNIE
	select BR2_PACKAGE_DHRYSTONE
	select BR2_PACKAGE_DROPBEAR
	select BR2_PACKAGE_DROPBEAR_SMALL
	select BR2_PACKAGE_ETHTOOL
	select BR2_PACKAGE_FIO
	select BR2_PACKAGE_GDB_SERVER
	select BR2_PACKAGE_IPERF
	select BR2_PACKAGE_LMBENCH
	select BR2_PACKAGE_MEMSTAT
	select BR2_PACKAGE_MEMTESTER
	select BR2_PACKAGE_NETPERF
	select BR2_PACKAGE_STRACE
	select BR2_PACKAGE_SMARTMONTOOLS
	select BR2_PACKAGE_TCPDUMP
	select BR2_PACKAGE_TCPDUMP_SMB
	select BR2_PACKAGE_WHETSTONE
	help
	  Enable packages for test.

config BR2_PACKAGE_BRUNO_DEBUG
	bool "Bruno Debug Build"
	default n
	select BR2_ENABLE_DEBUG
	select BR2_PACKAGE_GDB
	help
	  Enable debug code.

choice
	prompt "Board selection"
	depends on BR2_PACKAGE_BRUNO
	help
	  Select the Bruno board you are building for.

config BR2_PACKAGE_BRUNO_GFHD100
	bool "Bruno GFHD100 Board"
	select BR2_PACKAGE_BRCM_DRIVER_MOCA
	select BR2_PACKAGE_BRCM_DRIVER_WIFI
	select BR2_PACKAGE_BRCM_DRIVER_BLUETOOTH
	help
	  Builds for Bruno GFHD100 board.

endchoice
