#!/bin/sh
# If a Quantenna device is installed, print its interface name.
#
for interface in /sys/class/net/wlan[0-9]; do
  if [ -d "${interface}" ]; then
    vendor_id="$(cat "${interface}"/device/vendor)"
    device_id="$(cat "${interface}"/device/device)"
    if [ "${vendor_id}" = "0x1bb5" ] && [ "${device_id}" = "0x0008" ]; then
      echo "$(basename "${interface}")"
      break
    fi
  fi
done
exit 0
