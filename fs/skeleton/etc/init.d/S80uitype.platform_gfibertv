#!/bin/sh

. /etc/utils.sh

case "$1" in
  start)
    mkdir -p /tmp/ui
    uitype=$(hnvram -rq UITYPE 2>/dev/null)
    if [ $? -eq 0 ] && [ ! -z "$uitype" ]; then
      atomic /tmp/ui/uitype "$uitype"
    elif [ -e /config/uitype ]; then
      cp /config/uitype /tmp/ui/uitype
    fi
    ;;
  stop)
    ;;
  restart)
    $0 stop; $0 start
    ;;
  *)
    echo "Usage: $0 {start|stop|restart}"
    exit 1
esac
