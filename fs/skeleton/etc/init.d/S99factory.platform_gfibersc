#!/bin/sh

. /etc/utils.sh

case "$1" in
  start)
    if [ -e /tmp/factory_status ]; then
      echo "factory_status running."
      netcat -p 8883 -L factory_status.sh &
    fi
    ;;
  stop)
    pkillwait -x netcat
    ;;
  restart)
    $0 stop; $0 start
    ;;
  *)
    echo "Usage: $0 {start|stop|restart}"
    exit 1
esac
