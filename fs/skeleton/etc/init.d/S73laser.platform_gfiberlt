#!/bin/sh

#TODO(zixia): change be placed between S70pon and S72wan
#Pending 802.3ah OAM implementation

platform=$(cat /etc/platform)
if [ "GFLT200" != "$platform" ]; then
  exit
fi

case "$1" in
  start)
    echo "Starting laser."
    babysit 60 laser 2>&1 | logos laser &
    ;;
  stop)
    pkillwait -x laser
    ;;
  restart)
    $0 stop; $0 start
    ;;
  *)
    echo "Usage: $0 {start|stop|restart}"
    exit 1
    ;;
esac
