#!/bin/sh
# TODO(zixia): change be placed between S70pon and S72wan
# Pending 802.3ah OAM implementation

case "$1" in
  start)
    if runnable laser; then
      echo "Starting laser."
      babysit 60 laser 2>&1 | logos laser &
    fi
    ;;
  stop)
    pkillwait -x laser
    ;;
  restart)
    $0 stop; $0 start
    ;;
  *)
    echo "Usage: $0 {start|stop|restart}"
    exit 1
    ;;
esac
