#!/bin/sh
#
# Start LAN ....
#
lan_port=$(cat /etc/config/lanport)

case "$1" in
  start)
    echo -n "Starting LAN..."
    ifup lo
    if [ "x$lan_port" != "x" ]; then
      ifup $lan_port
    fi
    ;;
  stop)
    echo -n "Stopping LAN..."
    ifdown lo
    if [ "x$lan_port" != "x" ]; then
      ifdown $lan_port
    fi
    ;;
  restart|reload)
    "$0" stop
    "$0" start
    ;;
  *)
    echo $"Usage: $0 {start|stop|restart}"
    exit 1
esac

exit $?

