#!/bin/sh
. /etc/utils.sh

case "$1" in
  start)
    megs=$(platform_megs_ram)
    if [ "$megs" -gt 768 ]; then
      supernice babysit 60 memwatcher 2>&1 | logos memwatcher &
    fi
    ;;
  stop)
    pkillwait -x memwatcher
    ;;
  restart)
    $0 stop; $0 start
    ;;
  *)
    echo "Usage: $0 {start|stop|restart}"
    exit 1
    ;;
esac
