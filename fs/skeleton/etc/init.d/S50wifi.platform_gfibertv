#!/bin/sh
. /etc/utils.sh

case "$1" in
  start)
    if runnable wl && has_wifi; then
      wifi="eth2"
      wifisys=/sys/class/net/$wifi/address
      wifimac=$(cat $wifisys)
      wl ap 1
      wl radio off
      wl bssid "$wifimac"
    fi
    # Qualcomm Atheros WLAN
    if runnable iwconfig; then
      iwconfig ath0 essid GFRG200
    fi
    ;;
  stop)
    ;;
  restart)
    $0 stop; $0 start
    ;;
  *)
    echo "Usage: $0 {start|stop|restart}"
    exit 1
esac
