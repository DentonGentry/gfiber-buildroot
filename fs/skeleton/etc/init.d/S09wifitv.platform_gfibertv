#!/bin/sh
if ! is-tv-box; then
  if [ -z "$(grep wlan1.setup /config/wifi/hostapd.conf.wlan1 2>/dev/null)" ]; then
    rm -rf /config/wifi
  fi
  exit 0
fi

case "$1" in
  start)
    babysit 60 wifitv 2>&1 | logos wifitv &
    ;;
  stop)
    pkillwait -x wifitv
    pkillwait -x wpa_supplicant
    ;;
  restart)
    $0 stop; $0 start
      ;;
  *)
    echo "Usage: $0 {start|stop|restart}"
    exit 1
    ;;
esac
