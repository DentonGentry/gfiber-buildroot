#!/bin/sh

# If we're using glaser on this platform, don't start
# the statpitcher.
if runnable glaser; then
  exit 0
fi

case "$1" in
  start)
    babysit 60 statpitcher -i pon0 -s "$(serial)" 2>&1 | logos statpitcher &
    ;;
  stop)
    pkillwait statpitcher
    ;;
  restart|reload)
    $0 stop; $0 start
    ;;
  *)
    echo "Usage: $0 {start|stop|restart}"
    exit 1
esac
