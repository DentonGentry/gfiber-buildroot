#!/bin/sh
#
# Start LAN ....
#

case "$1" in
  start)
    echo -n "Starting LAN..."
    ifup lo
    ifup eth0
    ;;
  stop)
    echo -n "Stopping LAN..."
    ifdown lo
    ifdown eth0
    ;;
  restart|reload)
    "$0" stop
    "$0" start
    ;;
  *)
    echo $"Usage: $0 {start|stop|restart}"
    exit 1
esac

exit $?

